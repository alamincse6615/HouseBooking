<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentActivity">



    <TextView
        android:id="@+id/txt"
        android:layout_marginTop="30dp"
        android:text=" Payment Info"
        android:textSize="20dp"
        android:fontFamily="@font/custom"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />

    <ScrollView
        android:layout_below="@+id/txt"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="2dp"
                app:cardUseCompatPadding="false"
                app:elevation="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/lay_purpose_section"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/payment_type"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_marginEnd="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_border"
                                android:elevation="10dp"
                                android:spinnerMode="dropdown"
                                android:theme="@style/ThemeOverlay.AppCompat.Light"
                                android:layout_marginRight="5dp" />


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_purpose_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lay_purpose_section"
                        android:layout_margin="2dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txv_number"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_border"
                                android:elevation="10dp"
                                android:hint="01*********"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:inputType="text"
                                android:paddingStart="8dp"
                                android:paddingBottom="4dp"
                                android:paddingEnd="4dp"
                                android:paddingTop="4dp"
                                android:textColor="@color/add_properties_text"
                                android:textColorHint="@color/add_properties_text"
                                android:textSize="14sp"
                                android:theme="@style/ThemeOverlay.AppCompat.Light"
                                android:paddingLeft="8dp"
                                android:paddingRight="4dp" />

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lay_purpose_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lay_purpose_number"
                        android:layout_margin="2dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/edt_amount"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_border"
                                android:elevation="10dp"
                                android:hint="Amount"
                                android:inputType="numberDecimal"
                                android:paddingStart="8dp"
                                android:paddingBottom="4dp"
                                android:paddingEnd="4dp"
                                android:paddingTop="4dp"
                                android:textColor="@color/add_properties_text"
                                android:textColorHint="@color/add_properties_text"
                                android:textSize="14sp"
                                android:theme="@style/ThemeOverlay.AppCompat.Light"
                                android:paddingLeft="8dp"
                                android:paddingRight="4dp" />

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lay_purpose_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lay_purpose_name"
                        android:layout_margin="2dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/edt_transaction_number"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_border"
                                android:elevation="10dp"
                                android:hint="Transaction number"
                                android:inputType="text"
                                android:paddingStart="8dp"
                                android:paddingLeft="8dp"
                                android:paddingTop="4dp"
                                android:paddingEnd="4dp"
                                android:paddingRight="4dp"
                                android:paddingBottom="4dp"
                                android:textColor="@color/add_properties_text"
                                android:textColorHint="@color/add_properties_text"
                                android:textSize="14sp"
                                android:theme="@style/ThemeOverlay.AppCompat.Light" />

                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_continue"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:text="Done"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

    </TextView>

</RelativeLayout>
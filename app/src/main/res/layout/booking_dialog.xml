<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_dia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Booking Time "
        android:textColor="@color/colorPrimary"
        android:textSize="25dp"
        android:textStyle="bold"/>
    <View
        android:background="#857D7D"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Entry Date "
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:drawablePadding="10dp"
            android:textColor="@color/cursor_editText"
            android:textSize="15sp"
            android:textStyle="normal"/>
        <TextView
            android:id="@+id/tv_booking_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Click For Date "
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:gravity="center"
            android:background="@drawable/input_text_select"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/ic_date"
            android:textColor="@color/imagepicker_black"
            android:textSize="15dp"
            android:textStyle="normal"/>


    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Exit Date    "
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:drawablePadding="10dp"
            android:textColor="@color/cursor_editText"
            android:textSize="15sp"
            android:textStyle="normal"/>
        <TextView
            android:id="@+id/tv_return_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Click For Date "
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:gravity="center"
            android:background="@drawable/input_text_select"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/ic_date"
            android:textColor="@color/imagepicker_black"
            android:textSize="15dp"
            android:textStyle="normal"/>


    </LinearLayout>




    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/btn_no"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:text="Cancel"
            android:gravity="center"
            android:background="@drawable/button_google_bg"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:fontFamily="@font/custom"
            android:textColor="@color/button_google_line_login"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_yes"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_fb_bg"
            android:clickable="true"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:gravity="center"
            android:text="Booking Now"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:fontFamily="@font/custom"
            android:textColor="@color/button_fb_line_login"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>